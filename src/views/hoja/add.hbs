              </select>
            </div>

            <div class="nice-form-group">
              <label>NÚMERO DE SEMESTRES APROBADOS</label>
              <input type="number" name="semestres_aprobados_{{@index}}" value="{{this.semestres_aprobados}}"
                placeholder="1" />
            </div>

            <fieldset class="nice-form-group">
              <legend>GRADUADO</legend>
              <div class="nice-form-group">
                <input type="radio" name="graduado_{{@index}}" id="si_{{@index}}" value="SI" {{#if (eq
                  this.graduado "SI" )}}checked{{/if}} />
