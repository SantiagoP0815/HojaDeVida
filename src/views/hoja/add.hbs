        </div>

        <div class="nice-form-group">
          <label>PAÍS DE NACIMIENTO</label>
          <input type="text" name="pais_nacimiento" value="{{user.pais_nacimiento}}" placeholder="País de nacimiento"
            id="pais_nacimiento" />
        </div>

        <div class="nice-form-group">
          <label>DEPARTAMENTO DE NACIMIENTO</label>
          <input type="text" name="departamento_nacimiento" value="{{user.departamento_nacimiento}}"
            placeholder="Departamento de nacimiento" id="departamento_nacimiento" />
        </div>

        <div class="nice-form-group">
          <label>MUNICIPIO DE NACIMIENTO</label>
          <input type="text" name="municipio_nacimiento" value="{{user.municipio_nacimiento}}"
            placeholder="Municipio de nacimiento" id="municipio_nacimiento" />
        </div>

        <div class="nice-form-group">
          <label>DIRECCIÓN DE CORRESPONDENCIA</label>
          <input type="text" name="direccion_correspondencia" value="{{user.direccion_correspondencia}}"
            placeholder="Dirección de correspondencia" id="direccion_correspondencia" />
        </div>

        <div class="nice-form-group">
          <label>PAÍS DE CORRESPONDENCIA</label>
          <input type="text" name="pais_correspondencia" value="{{user.pais_correspondencia}}"
            placeholder="País de correspondencia" id="pais_correspondencia" />
        </div>

        <div class="nice-form-group">
          <label>DEPARTAMENTO DE CORRESPONDENCIA</label>
          <input type="text" name="departamento_correspondencia" value="{{user.departamento_correspondencia}}"
            placeholder="Departamento de correspondencia" id="departamento_correspondencia" />
        </div>

        <div class="nice-form-group">
          <label>MUNICIPIO DE CORRESPONDENCIA</label>
          <input type="text" name="municipio_correspondencia" value="{{user.municipio_correspondencia}}"
            placeholder="Municipio de correspondencia" id="municipio_correspondencia" />
        </div>

        <div class="nice-form-group">
          <label>TELÉFONO</label>
          <input type="tel" placeholder="Teléfono" value="{{user.telefono}}" class="icon-left" name="telefono"
