        </div>

        <div class="nice-form-group">
          <label>EMAIL</label>
          <input type="email" placeholder="Email" value="{{user.email}}" class="icon-left" name="email" id="email" />
        </div>
      </section>
      <section>

        <div class="href-target" id="formacion"></div>
