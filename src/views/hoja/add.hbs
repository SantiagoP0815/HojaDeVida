<div class="container">
  <div class="row mt-3">
    <aside class="col-12 col-md-3 mb-3">
      <style>
        /* Left navigation card style (softer shadow and subtle border) */
        .left-card { border-radius: .6rem; box-shadow: 0 6px 18px rgba(13,110,253,0.06); padding: .75rem; background: #fff; border: 1px solid rgba(13,110,253,0.04); }
        #leftNav .list-group-item { cursor: pointer; border: none; }
        #leftNav .list-group-item.active { background: #f8f9ff; border-left: 3px solid #0d6efd; color: #0d6efd; font-weight: 600; }

        /* Hide accordion header/buttons completely (keeps markup but removes native toggles) */
        .accordion-header, .accordion-button { display: none !important; }

        /* Style the accordion body when panel is visible. Important: DO NOT force .accordion-collapse to display:block - allow Bootstrap to manage show/hide. */
        .accordion .accordion-collapse .accordion-body { padding: 1rem; background: #ffffff; border-radius: .5rem; box-shadow: 0 6px 18px rgba(13,110,253,0.03); border: 1px solid #e9ecef; margin-bottom: 1rem; }
        .accordion .accordion-collapse { margin-bottom: 0; }
        .accordion .accordion-body { padding: 0; }

        /* Small responsive tweak: make left card full width on very small screens */
        @media (max-width: 767.98px) {
          .left-card { box-shadow: 0 4px 12px rgba(13,110,253,0.05); border-radius: .4rem; }
          #leftNav .list-group-item { padding: .5rem .6rem; }
        }
      </style>
      <div class="left-card">
        <div class="list-group" id="leftNav" role="tablist">
         <a class="list-group-item list-group-item-action active" href="#datos" data-bs-toggle="collapse" data-bs-target="#collapseDatos" aria-expanded="true" aria-controls="collapseDatos">Datos personales</a>
         <a class="list-group-item list-group-item-action" href="#formacion" data-bs-toggle="collapse" data-bs-target="#collapseFormacion" aria-expanded="false" aria-controls="collapseFormacion">Formación académica</a>
         <a class="list-group-item list-group-item-action" href="#experiencia" data-bs-toggle="collapse" data-bs-target="#collapseExperiencia" aria-expanded="false" aria-controls="collapseExperiencia">Experiencia Laboral</a>
         <a class="list-group-item list-group-item-action" href="#tiempo" data-bs-toggle="collapse" data-bs-target="#collapseTiempo" aria-expanded="false" aria-controls="collapseTiempo">Tiempo Total de Experiencia</a>
         <a class="list-group-item list-group-item-action" href="#documentos" data-bs-toggle="collapse" data-bs-target="#collapseDocumentos" aria-expanded="false" aria-controls="collapseDocumentos">Documentos</a>
        </div>

        <div class="mt-3 d-grid gap-2">
          <button type="button" id="btnSaveLeft" class="btn btn-success" onclick="enviarFormulario()">Guardar cambios</button>
          <button type="button" id="btnPdfLeft" class="btn btn-primary" onclick="descargarPDF()">Descargar PDF</button>
          <a class="btn btn-outline-secondary" target="_blank" href="/hoja/view/{{user.unique_identifier}}">Enlace para compartir</a>
        </div>
      </div>
      
    </aside>

    <main class="col-12 col-md-9">
      <form id="datos-form" action="/hoja/insertar-datos" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">

        <div class="accordion" id="hojaAccordion">
          <!-- Datos Personales -->
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingDatos">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDatos"
                aria-expanded="true" aria-controls="collapseDatos">
                Datos personales
              </button>
            </h2>
            <div id="collapseDatos" class="accordion-collapse collapse show" aria-labelledby="headingDatos"
              data-bs-parent="#hojaAccordion">
              <div class="accordion-body">
                <!-- ...existing code for personal data inputs... -->
                <!-- Placeholders: the form fields for nombres, apellidos, documento, sexo, nacionalidad, pais, fecha_nacimiento, direccion, telefono, email, etc. -->
                <div class="nice-form-group">
                  <label>NOMBRES</label>
                  <input type="text" placeholder="Nombres" value="{{user.nombres}}" name="nombres" id="nombres" />
                </div>

                <div class="nice-form-group">
                  <label>PRIMER APELLIDO</label>
                  <input type="text" value="{{user.primer_apellido}}" placeholder="Primer apellido" name="primer_apellido"
                    id="primer_apellido" />
                </div>

                <div class="nice-form-group">
                  <label>SEGUNDO APELLIDO </label>
                  <small>(o de casada)</small>
                  <input type="text" value="{{user.segundo_apellido}}" placeholder="Segundo apellido" name="segundo_apellido"
                    id="segundo_apellido" />
                </div>

                <fieldset class="nice-form-group">
                  <legend>TIPO DE DOCUMENTO DE IDENTIFICACIÓN</legend>
                  <div class="nice-form-group">
                    <input type="radio" name="tipo_documento" id="C.C" value="C.C" {{#if (eq user.tipo_documento "C.C" )}}
                      checked {{/if}} />
                    <label for="C.C">C.C</label>
                  </div>
                  <div class="nice-form-group">
                    <input type="radio" name="tipo_documento" id="C.E" value="C.E" {{#if (eq user.tipo_documento "C.E" )}}
                      checked {{/if}} />
                    <label for="C.E">C.E</label>
                  </div>
                  <div class="nice-form-group">
                    <input type="radio" name="tipo_documento" id="PAS" value="PAS" {{#if (eq user.tipo_documento "PAS" )}}
                      checked {{/if}} />
                    <label for="PAS">PAS</label>
                  </div>
                </fieldset>

                <div class="nice-form-group">
                  <label>NÚMERO DE DOCUMENTO DE IDENTIFICACIÓN</label>
                  <input type="tel" placeholder="Número de documento de identificación" value="{{user.numero_documento}}"
                    name="numero_documento" id="numero_documento" />
                </div>

                <fieldset class="nice-form-group">
                  <legend>SEXO</legend>
                  <div class="nice-form-group">
                    <input type="radio" name="sexo" id="masculino" value="M" {{#if (eq user.sexo "M" )}}checked{{/if}} />
                    <label for="masculino">Masculino</label>
                  </div>
                  <div class="nice-form-group">
                    <input type="radio" name="sexo" id="femenino" value="F" {{#if (eq user.sexo "F" )}}checked{{/if}} />
                    <label for="femenino">Femenino</label>
                  </div>
                </fieldset>


                <fieldset class="nice-form-group">
                  <legend>NACIONALIDAD</legend>
                  <div class="nice-form-group">
                    <input type="radio" name="nacionalidad" id="colombiano" value="COLOMBIANO" {{#if (eq
                      user.nacionalidad "COLOMBIANO" )}}checked{{/if}} />
                    <label for="colombiano">Colombiano</label>
                  </div>
                  <div class="nice-form-group">
                    <input type="radio" name="nacionalidad" id="extranjero" value="EXTRANJERO" {{#if (eq
                      user.nacionalidad "EXTRANJERO" )}}checked{{/if}} />
                    <label for="extranjero">Extranjero</label>
                  </div>
                </fieldset>

                <div class="nice-form-group">
                  <label>PAÍS DE NACIONALIDAD</label>
                  <input type="text" name="pais" value="{{user.pais}}" placeholder="País" id="pais" />
                </div>

                {{#if documento}}
                <div class="nice-form-group">
                  <label>DOCUMENTO DE IDENTIFICACIÓN ESCANEADO</label>
                  <input type="file" name="documento_id" id="documento_id" />
                  <div id="file-info" style="margin-top: 10px; font-size: 0.9em; color: #555;">
                    Archivo guardado:
                    <a target="_blank" href="/hoja/documento/{{ documento.id_documento }}" style="color: #0011ff;">
                      Descargar documento
                    </a>
                    <div style="font-size:0.85em;color:#666;margin-top:4px">Original: {{documento.original_name}}</div>
                  </div>
                </div>
                {{else}}
                <div class="nice-form-group">
                  <label>DOCUMENTO DE IDENTIFICACIÓN ESCANEADO</label>
                  <input type="file" name="documento_id" id="documento_id" />
                  <div style="margin-top: 10px, font-size: 0.9em, color: #555;">
                    No hay ningún archivo guardado
                  </div>
                </div>
                {{/if}}

                <fieldset class="nice-form-group">
                  <legend>TIPO DE LIBRETA MILITAR</legend>
                  <div class="nice-form-group">
                    <input type="radio" name="tipo_libreta_militar" id="primera clase" value="PRIMERA CLASE" {{#if (eq
                      user.tipo_libreta_militar "PRIMERA CLASE" )}}checked{{/if}} />
                    <label for="primera clase">Primera clase</label>
                  </div>
                  <div class="nice-form-group">
                    <input type="radio" name="tipo_libreta_militar" id="segunda clase" value="SEGUNDA CLASE" {{#if (eq
                      user.tipo_libreta_militar "SEGUNDA CLASE" )}}checked{{/if}} />
                    <label for="segunda clase">Segunda clase</label>
                  </div>
                </fieldset>

                <div class="nice-form-group">
                  <label>NÚMERO DE LIBRETA MILITAR</label>
                  <input type="tel" placeholder="Número de libreta militar" value="{{user.numero_libreta_militar}}"
                    name="numero_libreta_militar" id="numero_libreta_militar" />
                </div>

                <div class="nice-form-group">
                  <label>D.M DE LIBRETA MILITAR</label>
                  <input type="tel" placeholder="D.M de libreta militar" value="{{user.dm_libreta_militar}}"
                    name="dm_libreta_militar" id="dm_libreta_militar" />
                </div>

                <div class="nice-form-group">
                  <label>FECHA DE NACIMIENTO</label>
                  <input type="date" name="fecha_nacimiento" id="fecha_nacimiento" value="{{user.fecha_nacimiento}}" />
                </div>

                <div class="nice-form-group">
                  <label>PAÍS DE NACIMIENTO</label>
                  <input type="text" name="pais_nacimiento" value="{{user.pais_nacimiento}}" placeholder="País de nacimiento"
                    id="pais_nacimiento" />
                </div>

                <div class="nice-form-group">
                  <label>DEPARTAMENTO DE NACIMIENTO</label>
                  <input type="text" name="departamento_nacimiento" value="{{user.departamento_nacimiento}}"
                    placeholder="Departamento de nacimiento" id="departamento_nacimiento" />
                </div>

                <div class="nice-form-group">
                  <label>MUNICIPIO DE NACIMIENTO</label>
                  <input type="text" name="municipio_nacimiento" value="{{user.municipio_nacimiento}}"
                    placeholder="Municipio de nacimiento" id="municipio_nacimiento" />
                </div>

                <div class="nice-form-group">
                  <label>DIRECCIÓN DE CORRESPONDENCIA</label>
                  <input type="text" name="direccion_correspondencia" value="{{user.direccion_correspondencia}}"
                    placeholder="Dirección de correspondencia" id="direccion_correspondencia" />
                </div>

                <div class="nice-form-group">
                  <label>PAÍS DE CORRESPONDENCIA</label>
                  <input type="text" name="pais_correspondencia" value="{{user.pais_correspondencia}}"
                    placeholder="País de correspondencia" id="pais_correspondencia" />
                </div>

                <div class="nice-form-group">
                  <label>DEPARTAMENTO DE CORRESPONDENCIA</label>
                  <input type="text" name="departamento_correspondencia" value="{{user.departamento_correspondencia}}"
                    placeholder="Departamento de correspondencia" id="departamento_correspondencia" />
                </div>

                <div class="nice-form-group">
                  <label>MUNICIPIO DE CORRESPONDENCIA</label>
                  <input type="text" name="municipio_correspondencia" value="{{user.municipio_correspondencia}}"
                    placeholder="Municipio de correspondencia" id="municipio_correspondencia" />
                </div>

                <div class="nice-form-group">
                  <label>TELÉFONO</label>
                  <input type="tel" placeholder="Teléfono" value="{{user.telefono}}" class="icon-left" name="telefono"
                    id="telefono" />
                </div>

                <div class="nice-form-group">
                  <label>EMAIL</label>
                  <input type="email" placeholder="Email" value="{{user.email}}" class="icon-left" name="email" id="email" />
                </div>
              </div>
            </div>
          </div>

          <!-- Formación académica -->
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingFormacion">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFormacion"
                aria-expanded="false" aria-controls="collapseFormacion">
                Formación académica
              </button>
            </h2>
            <div id="collapseFormacion" class="accordion-collapse collapse" aria-labelledby="headingFormacion"
              data-bs-parent="#hojaAccordion">
              <div class="accordion-body">
                <!-- ...existing code for educación básica/media and superior blocks... -->
                <h1 class="nice-form-group">EDUCACIÓN BASICA Y MEDIA</h1>
                <fieldset class="nice-form-group">
                  <small>Seleccione el último grado aprobado</small>
                  <div class="radio-container">
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="1" value="1" {{#if (eq
                        educacion_basica_media.educacion_basica "1" )}}checked{{/if}} />
                      <label for="1">1</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="2" value="2" {{#if (eq
                        educacion_basica_media.educacion_basica "2" )}}checked{{/if}} />
                      <label for="2">2</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="3" value="3" {{#if (eq
                        educacion_basica_media.educacion_basica "3" )}}checked{{/if}} />
                      <label for="3">3</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="4" value="4" {{#if (eq
                        educacion_basica_media.educacion_basica "4" )}}checked{{/if}} />
                      <label for="4">4</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="5" value="5" {{#if (eq
                        educacion_basica_media.educacion_basica "5" )}}checked{{/if}} />
                      <label for="5">5</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="6" value="6" {{#if (eq
                        educacion_basica_media.educacion_basica "6" )}}checked{{/if}} />
                      <label for="6">6</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="7" value="7" {{#if (eq
                        educacion_basica_media.educacion_basica "7" )}}checked{{/if}} />
                      <label for="7">7</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="8" value="8" {{#if (eq
                        educacion_basica_media.educacion_basica "8" )}}checked{{/if}} />
                      <label for="8">8</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="9" value="9" {{#if (eq
                        educacion_basica_media.educacion_basica "9" )}}checked{{/if}} />
                      <label for="9">9</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="10" value="10" {{#if (eq
                        educacion_basica_media.educacion_basica "10" )}}checked{{/if}} />
                      <label for="10">10</label>
                    </div>
                    <div class="radio-item">
                      <input type="radio" name="educacion_basica" id="11" value="11" {{#if (eq
                        educacion_basica_media.educacion_basica "11" )}}checked{{/if}} />
                      <label for="11">11</label>
                    </div>
                  </div>

                </fieldset>

                <div class="nice-form-group">
                  <label>TÍTULO OBTENIDO</label>
                  <input type="text" name="titulo_obtenido" value="{{educacion_basica_media.titulo_obtenido}}"
                    placeholder="Título obtenido" id="titulo_obtenido" />
                </div>

                <div class="nice-form-group">
                  <label>FECHA DE GRADO</label>
                  <input type="month" value="{{educacion_basica_media.fecha_grado}}" id="fecha_grado" name="fecha_grado" />
                </div>

                <h1 class="nice-form-group">EDUCACIÓN SUPERIOR (pregrado y postgrado)</h1>
                <div id="academic-container">
                  {{#if educacion_superior.length}}
                  {{#each educacion_superior}}
                  <div class="academic-block">
                    <div class="nice-form-group">
                      <input type="hidden" name="id_educacion_superior_{{@index}}" value="{{this.id_educacion_superior}}" />
                    </div>
                    <div class="nice-form-group">
                      <label>MODALIDAD ACADÉMICA</label>
                      <select name="modalidad_academica_{{@index}}">
                        <option value="" disabled {{#if (eq this.modalidad_academica "" )}}selected{{/if}}>Seleccione la
                          modalidad académica</option>
                        <option value="TECNICA" {{#if (eq this.modalidad_academica "TECNICA" )}}selected{{/if}}>Técnica
                        </option>
                        <option value="TECNOLOGA" {{#if (eq this.modalidad_academica "TECNOLOGA" )}}selected{{/if}}>Tecnológica
                        </option>
                        <option value="TECNOLOGA ESPECIALIZADA" {{#if (eq this.modalidad_academica "TECNOLOGA ESPECIALIZADA"
                          )}}selected{{/if}}>Tecnología especializada</option>
                        <option value="UNIVERSITARIA" {{#if (eq this.modalidad_academica "UNIVERSITARIA" )}}selected{{/if}}>
                          Universitaria</option>
                        <option value="ESPECIALIZACION" {{#if (eq this.modalidad_academica "ESPECIALIZACION" )}}selected{{/if}}>
                          Especialización</option>
                        <option value="MAESTRIA O MAGISTER" {{#if (eq this.modalidad_academica "MAESTRIA O MAGISTER"
                          )}}selected{{/if}}>Maestría o Magister</option>
                        <option value="DOCTORADO O PHD" {{#if (eq this.modalidad_academica "DOCTORADO O PHD" )}}selected{{/if}}>
                          Doctorado o PHD</option>
                      </select>
                    </div>

                    <div class="nice-form-group">
                      <label>NÚMERO DE SEMESTRES APROBADOS</label>
                      <input type="number" name="semestres_aprobados_{{@index}}" value="{{this.semestres_aprobados}}"
                        placeholder="1" />
                    </div>

                    <fieldset class="nice-form-group">
                      <legend>GRADUADO</legend>
                      <div class="nice-form-group">
                        <input type="radio" name="graduado_{{@index}}" id="si_{{@index}}" value="SI" {{#if (eq
                          this.graduado "SI" )}}checked{{/if}} />
                        <label for="si_{{@index}}">Si</label>
                      </div>
                      <div class="nice-form-group">
                        <input type="radio" name="graduado_{{@index}}" id="no_{{@index}}" value="NO" {{#if (eq
                          this.graduado "NO" )}}checked{{/if}} />
                        <label for="no_{{@index}}">No</label>
                      </div>
                    </fieldset>

                    <div class="nice-form-group">
                      <label>NOMBRE DE LOS ESTUDIOS O TÍTULO OBTENIDO</label>
                      <input type="text" name="nombre_titulo_{{@index}}" value="{{this.nombre_titulo}}"
                        placeholder="Nombre de los estudios o título obtenido" />
                    </div>

                    <div class="nice-form-group">
                      <label>TERMINACIÓN</label>
                      <input type="month" name="mes_terminacion_{{@index}}" value="{{this.mes_terminacion}}" />
                    </div>

                    <div class="nice-form-group">
                      <label>NÚMERO DE TARJETA PROFESIONAL</label>
                      <input type="text" name="numero_tarjeta_profesional_{{@index}}"
                        value="{{this.numero_tarjeta_profesional}}" placeholder="Número de tarjeta profesional" />
                    </div>

                    <div class="nice-form-group">
                      <label>DOCUMENTO QUE SUSTENTE LA INFORMACIÓN</label>
                      <input type="file" name="documento_educacion_superior_{{@index}}"
                        id="documento_educacion_superior_{{@index}}" />
                      <div style="font-size: 0.9em; color: #555;" class="nice-form-group">
                        {{#if this.documento }}
                        Archivo en la base de datos:
                        <a target="_blank" style="color: #0011ff;">
                          {{ this.documento }}
                        </a>
                        {{else}}
                        No hay ningún archivo en la base de datos
                        {{/if}}
                      </div>
                    </div>
                  </div>
                  {{/each}}
                  {{else}}
                  <div class="academic-block">
                    <div class="nice-form-group">
                      <input type="hidden" name="id_educacion_superior_0" value="" />
                    </div>
                    <div class="nice-form-group">
                      <label>MODALIDAD ACADÉMICA</label>
                      <select name="modalidad_academica_0">
                        <option value="" disabled selected>Seleccione la modalidad académica</option>
                        <option value="TECNICA">Técnica</option>
                        <option value="TECNOLOGA">Tecnológica</option>
                        <option value="TECNOLOGA ESPECIALIZADA">Tecnología especializada</option>
                        <option value="UNIVERSITARIA">Universitaria</option>
                        <option value="ESPECIALIZACION">Especialización</option>
                        <option value="MAESTRIA O MAGISTER">Maestría o Magister</option>
                        <option value="DOCTORADO O PHD">Doctorado o PHD</option>
                      </select>
                    </div>

                    <div class="nice-form-group">
                      <label>NÚMERO DE SEMESTRES APROBADOS</label>
                      <input type="number" name="semestres_aprobados_0" placeholder="1" />
                    </div>

                    <fieldset class="nice-form-group">
                      <legend>GRADUADO</legend>
                      <div class="nice-form-group">
                        <input type="radio" name="graduado_0" id="si_0" value="SI" />
                        <label for="si_0">Si</label>
                      </div>
                      <div class="nice-form-group">
                        <input type="radio" name="graduado_0" id="no_0" value="NO" />
                        <label for="no_0">No</label>
                      </div>
                    </fieldset>

                    <div class="nice-form-group">
                      <label>NOMBRE DE LOS ESTUDIOS O TÍTULO OBTENIDO</label>
                      <input type="text" name="nombre_titulo_0" placeholder="Nombre de los estudios o título obtenido" />
                    </div>

                    <div class="nice-form-group">
                      <label>TERMINACIÓN</label>
                      <input type="month" name="mes_terminacion_0" />
                    </div>

                    <div class="nice-form-group">
                      <label>NÚMERO DE TARJETA PROFESIONAL</label>
                      <input type="text" name="numero_tarjeta_profesional_0" placeholder="Número de tarjeta profesional" />
                    </div>
                    <div class="nice-form-group">
                      <label>DOCUMENTO QUE SUSTENTE LA INFORMACIÓN</label>
                      <input type="file" name="documento_educacion_superior_0" id="documento_educacion_superior_0" />
                      <div style="font-size: 0.9em; color: #555;" class="nice-form-group">
                        No hay ningún archivo en la base de datos
                      </div>
                    </div>
                  </div>
                  {{/if}}
                </div>

                <div class="botonderecha nice-form-group">
                  <button type="button" id="remove-academic" class="btn btn-danger">[-] Eliminar Información</button>
                  <button type="button" id="add-academic" class="btn btn-success ml-2">[+] Añadir Información</button>
                </div>

                <h1 class="nice-form-group">IDIOMAS DIFERENTES AL ESPAÑOL</h1>
                <div id="languages-container">
                  {{#if idiomas.length}}
                  {{#each idiomas}}
                  <div class="language-block">
