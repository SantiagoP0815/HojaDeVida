          <div class="radio-container">
            <div class="radio-item">
              <input type="radio" name="educacion_basica" id="1" value="1" {{#if (eq
                educacion_basica_media.educacion_basica "1" )}}checked{{/if}} />
              <label for="1">1</label>
            </div>
            <div class="radio-item">
              <input type="radio" name="educacion_basica" id="2" value="2" {{#if (eq
                educacion_basica_media.educacion_basica "2" )}}checked{{/if}} />
              <label for="2">2</label>
            </div>
            <div class="radio-item">
              <input type="radio" name="educacion_basica" id="3" value="3" {{#if (eq
                educacion_basica_media.educacion_basica "3" )}}checked{{/if}} />
              <label for="3">3</label>
            </div>
            <div class="radio-item">
              <input type="radio" name="educacion_basica" id="4" value="4" {{#if (eq
