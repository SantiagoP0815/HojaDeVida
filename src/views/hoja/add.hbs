              <input type="radio" name="educacion_basica" id="11" value="11" {{#if (eq
                educacion_basica_media.educacion_basica "11" )}}checked{{/if}} />
              <label for="11">11</label>
            </div>
          </div>

        </fieldset>

        <div class="nice-form-group">
          <label>TÍTULO OBTENIDO</label>
          <input type="text" name="titulo_obtenido" value="{{educacion_basica_media.titulo_obtenido}}"
            placeholder="Título obtenido" id="titulo_obtenido" />
        </div>

        <div class="nice-form-group">
          <label>FECHA DE GRADO</label>
          <input type="month" value="{{educacion_basica_media.fecha_grado}}" id="fecha_grado" name="fecha_grado" />
        </div>

        <h1 class="nice-form-group">EDUCACIÓN SUPERIOR (pregrado y postgrado)</h1>
        <div id="academic-container">
          {{#if educacion_superior.length}}
          {{#each educacion_superior}}
          <div class="academic-block">
            <div class="nice-form-group">
              <input type="hidden" name="id_educacion_superior_{{@index}}" value="{{this.id_educacion_superior}}" />
            </div>
            <div class="nice-form-group">
              <label>MODALIDAD ACADÉMICA</label>
              <select name="modalidad_academica_{{@index}}">
                <option value="" disabled {{#if (eq this.modalidad_academica "" )}}selected{{/if}}>Seleccione la
                  modalidad académica</option>
                <option value="TECNICA" {{#if (eq this.modalidad_academica "TECNICA" )}}selected{{/if}}>Técnica</option>
                <option value="TECNOLOGA" {{#if (eq this.modalidad_academica "TECNOLOGA" )}}selected{{/if}}>Tecnológica
                </option>
                <option value="TECNOLOGA ESPECIALIZADA" {{#if (eq this.modalidad_academica "TECNOLOGA ESPECIALIZADA"
                  )}}selected{{/if}}>Tecnología especializada</option>
                <option value="UNIVERSITARIA" {{#if (eq this.modalidad_academica "UNIVERSITARIA" )}}selected{{/if}}>
                  Universitaria</option>
                <option value="ESPECIALIZACION" {{#if (eq this.modalidad_academica "ESPECIALIZACION" )}}selected{{/if}}>
