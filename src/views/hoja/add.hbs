<script>
  // Initialize: collapse all panels, then show collapseDatos
  document.addEventListener('DOMContentLoaded', function () {
    var collapseElems = document.querySelectorAll('.accordion-collapse');
    collapseElems.forEach(function (el) { var c = new bootstrap.Collapse(el, {toggle: false}); c.hide(); });
    // show datos
    var datos = document.getElementById('collapseDatos');
    if (datos) { new bootstrap.Collapse(datos, {toggle: false}).show(); }
    // wire list-group links to toggle panels
    document.querySelectorAll('#leftNav a[data-bs-target]').forEach(function (link) {
      link.addEventListener('click', function (e) {
        e.preventDefault();
        var tgt = document.querySelector(link.getAttribute('data-bs-target'));
        if (!tgt) return;
        // hide others
        collapseElems.forEach(function (el) { try { new bootstrap.Collapse(el, {toggle: false}).hide(); } catch(err) {} });
        // show target
        try { new bootstrap.Collapse(tgt, {toggle: false}).show(); } catch(err) { tgt.classList.add('show'); }
        // mark active
        document.querySelectorAll('#leftNav a').forEach(a => a.classList.remove('active'));
        link.classList.add('active');
      });
    });
  });
</script>