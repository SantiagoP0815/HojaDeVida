                educacion_basica_media.educacion_basica "6" )}}checked{{/if}} />
              <label for="6">6</label>
            </div>
            <div class="radio-item">
              <input type="radio" name="educacion_basica" id="7" value="7" {{#if (eq
                educacion_basica_media.educacion_basica "7" )}}checked{{/if}} />
              <label for="7">7</label>
            </div>
            <div class="radio-item">
              <input type="radio" name="educacion_basica" id="8" value="8" {{#if (eq
                educacion_basica_media.educacion_basica "8" )}}checked{{/if}} />
              <label for="8">8</label>
            </div>
            <div class="radio-item">
              <input type="radio" name="educacion_basica" id="9" value="9" {{#if (eq
                educacion_basica_media.educacion_basica "9" )}}checked{{/if}} />
              <label for="9">9</label>
