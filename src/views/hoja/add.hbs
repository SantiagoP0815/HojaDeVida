          <label>DOCUMENTO DE IDENTIFICACIÓN ESCANEADO</label>
          <input type="file" name="documento_id" id="documento_id" required />
          <div id="file-info" style="margin-top: 10px; font-size: 0.9em; color: #555;">
            No hay ningún archivo en la base de datos
          </div>
