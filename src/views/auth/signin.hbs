<main class="signin d-flex">
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row w-100">
      <div class="col-lg-6 col-md-8 col-sm-10 mx-auto">
        <div class="card text-center shadow-lg custom-border-extern">
          <div class="card-header navbar text-white">
            <h3 class="mx-auto">Inicia sesion</h3>
          </div>
          <div class="card-body">
            <form action="/signin" method="POST">
              <div class="form-group mb-3">
                <input type="text" name="numero_documento" placeholder="Número de documento" class="form-control" autofocus>
              </div>
              <div class="form-group mb-3">
                <input type="password" name="password" placeholder="Contraseña" class="form-control">
              </div>
              <button class="btn btn-primary w-100">
                Iniciar
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>